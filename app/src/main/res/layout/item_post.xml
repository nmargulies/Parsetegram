<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ivProfile"
        android:layout_width="34dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/tvDescription"
        android:layout_alignTop="@+id/tvUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="getUserDetails"
        app:srcCompat="@drawable/instagram_profile" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="147dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="415dp"
        android:layout_height="315dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:background="@android:color/background_dark"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="341dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="52dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPicture" />

    <ImageButton
        android:id="@+id/buttonFavorite"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:background="@drawable/ufi_heart_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPicture" />


    <ImageView
        android:id="@+id/buttonComment"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_alignTop="@id/buttonFavorite"
        android:layout_marginStart="32dp"
        android:background="@drawable/ufi_comment"
        app:layout_constraintStart_toStartOf="@+id/buttonFavorite"
        app:layout_constraintTop_toBottomOf="@+id/ivPicture" />

    <TextView
        android:id="@+id/tvFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonFavorite" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:layout_marginTop="76dp"
        android:text="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonFavorite" />

</android.support.constraint.ConstraintLayout>